<!doctype html>
<html>
  <head>
    <title>Register for <%=shopData.shopName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
<body>
    <h1>Register</h1>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul style="color:red;">
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

    <form method="POST" action="/users/registered">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required value="<%= formData ? formData.username : '' %>">
        <br>
        <label for="first">First Name:</label>
        <input type="text" id="first" name="first" required value="<%= formData ? formData.username : '' %>">
        <br>
        <label for="last">Last Name:</label>
        <input type="text" id="last" name="last" required value="<%= formData ? formData.username : '' %>">
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required value="<%= formData ? formData.username : '' %>">
        <br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required value="<%= formData ? formData.username : '' %>">
        <br>
        <input type="submit" value="Register">
    </form>
   
</body>
</html>