<!DOCTYPE html>
<html>
<head>
    <title>Berties Book Shop</title>
    <style>
        table {
            border-collapse: collapse;
            width: 50%;
        }
        th, td {
            border: 1px solid #333;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #eee;
        }
    </style>
</head>
<body>
    <h1>Available Books</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Price (Â£)</th>
        </tr>
        <% availableBooks.forEach(function(book) { %>
            <tr>
                <td><%= book.name %></td>
                <td><%= book.price %></td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
