<!doctype html>
<html>
  <head>
    <title>Welcome to <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Welcome to <%= shopData.shopName %></h1>
    <% if (typeof session !== 'undefined' && session.userId) { %>
      <p>Welcome, <%= session.displayName || session.userId %> | <a href="/logout">Logout</a></p>
    <% } else { %>
      <p><a href="/users/login">Login</a> | <a href="/users/register">Register</a></p>
    <% } %>
    
    <p><a href="about">About <%= shopData.shopName %></a></p>
    <p><a href="/books/search">Search for books</a></p>
    <p><a href="users/register">Register with us</a></p>
    <p><a href="/books/list">Book List</a></p>
    <p><a href="/books/addbook">Add Book</a></p>

    
    <form action="/books/search-result" method="GET">
        <input type="text" name="keyword" placeholder="Search books" required>
        <button type="submit">Search</button>
    </form>
    
  </body>
</html>
